<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.proapp" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".utils.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProApp" >

        <activity
            android:name=".ExploreActivity"
            android:exported="false"
            android:label="@string/title_activity_explore"
            android:windowSoftInputMode="adjustPan"
            />
        <activity
            android:name=".CoolAssignmentUI"
            android:exported="false"
            android:theme="@style/Theme.ProApp.NoActionBar" />
        <activity
            android:name=".JobDetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/Theme.ProApp.NoActionBar" />
        <activity
            android:name=".JobFormActivity"
            android:exported="false" />
        <activity
            android:name=".AuthenticationActivity"
            android:exported="false" />
        <activity
            android:name=".ProDetailsActivity"
            android:theme="@style/Theme.ProApp.NoActionBar" />
        <activity
            android:name=".HomeActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ProApp.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>