<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#F19F12</item>
        <item name="colorPrimaryVariant">#F19F12</item>
        <item name="colorOnPrimary">@color/dark_theme_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_theme_background</item>
        <item name="colorSecondaryVariant">#373939</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="layoutBackground">
        <item name="android:background">@color/dark_theme_background</item>
    </style>

    <style name="specialText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textNameTitle">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>